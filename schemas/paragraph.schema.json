{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["type", "title", "children"],
  "properties": {
    "type": {
      "const": "chapter"
    },
    "title": {
      "type": "string"
    },
    "children": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/paragraph"
      }
    }
  },

  "definitions": {
    "paragraph": {
      "type": "object",
      "required": ["type", "title", "children"],
      "properties": {
        "type": { "const": "paragraph" },
        "title": {
          "type": ["string", "null"]
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/section"
          }
        }
      }
    },

    "section": {
      "type": "object",
      "required": ["type", "children"],
      "properties": {
        "type": { "const": "section" },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/block"
          }
        }
      }
    },

    "block": {
      "type": "object",
      "required": ["kind"],
      "properties": {
        "kind": {
          "enum": ["text", "list_start", "list_item"]
        },
        "text": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "allOf": [
        {
          "if": {
            "properties": { "kind": { "const": "list_item" } }
          },
          "then": {
            "required": ["text"]
          }
        },
        {
          "if": {
            "properties": { "kind": { "const": "list_start" } }
          },
          "then": {
            "required": ["text"]
          }
        },
        {
          "if": {
            "properties": { "kind": { "const": "text" } }
          },
          "then": {
            "required": ["text"]
          }
        }
      ]
    }
  }
}
